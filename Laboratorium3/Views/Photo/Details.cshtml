@{
}
<h1>Szczegóły</h1>
<form asp-controller="Photo" asp-action="Index" method="post" >

    <label asp-for="Data"></label>
    <input class="form-control" asp-for="Data" readonly/>
    <span class="text-danger" asp-validation-for="Data"></span>

    <label asp-for="Opis"></label>
    <input class="form-control" asp-for="Opis" readonly />
    <span class="text-danger" asp-validation-for="Opis"></span>

    <label asp-for="Aparat"></label>
    <input class="form-control" asp-for="Aparat" readonly />
    <span class="text-danger" asp-validation-for="Aparat"></span>

    <label asp-for="Autor"></label>
    <input class="form-control" asp-for="Autor" readonly />
    <span class="text-danger" asp-validation-for="Autor"></span>

    <label asp-for="Resolution"></label>
    <input class="form-control" asp-for="Resolution" readonly />
    <span class="text-danger" asp-validation-for="Resolution"></span>

    <label asp-for="Format"></label>
    <input class="form-control" asp-for="Format" readonly />
    <span class="text-danger" asp-validation-for="Format"></span>

    <label asp-for="Priority"></label>
    <span asp-validation-for="Priority" class="text-danger"></span>
    <div class="form-control" readonly>
        @Html.DisplayFor(model => model.Priority) @*Tylko wyświetlanie, więc nie potrzebna lista rozwijana*@
    </div>
    <div class="form-group" readonly>
        <select class="form-control" asp-for="OrganizationId" asp-items="@Model.Organizations"></select>
    </div>

    <br/>
    <button type="submit">Wróć</button>

</form>
